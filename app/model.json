{
  "id": "MyFriendsApp",
  "title": "Student1 & Student2 Friend Tracker",
  "entityList": [
    { "id": "Friend", "url": "/friend" },
    { "id": "Group", "url": "/group" },
    { "id": "Location", "url": "/location" },
    { "id": "Activity", "url": "/activity" }
  ],
  "formList": [
    {
      "id": "FriendForm",
      "title": "Friend",
      "url": "/friend",
      "formFieldList": [
        { "id": "firstName", "type": "text", "name": "First Name", "width": 1, "required": true },
        { "id": "lastName", "type": "text", "name": "Last Name", "width": 1, "required": true },
        { "id": "nickname", "type": "text", "name": "Nickname", "width": 2, "required": true },
        { "id": "email", "type": "text", "name": "Email", "width": 2, "required": true },
        { "id": "birthday", "type": "date", "name": "Birthday", "width": 2, "required": false },
        { "id": "group", "type": "autocomplete", "name": "Group", "url": "/group", "form": "GroupForm", "width": 2 },
        { "type": "deleteButton", "name": "Delete" },
        { "type": "cancelButton", "name": "Cancel" },
        { "type": "okButton", "name": "Ok" }
      ]
    },
    {
      "id": "GroupForm",
      "title": "Group",
      "url": "/group",
      "formFieldList": [
        { "id": "name", "type": "text", "name": "Group Name", "width": 2, "required": true },
        { "type": "deleteButton", "name": "Delete" },
        { "type": "cancelButton", "name": "Cancel" },
        { "type": "okButton", "name": "Ok" }
      ]
    },
    {
      "id": "LocationForm",
      "title": "Location",
      "url": "/location",
      "formFieldList": [
        { "id": "name", "type": "text", "name": "Location Name", "width": 2, "required": true },
        { "id": "address", "type": "text", "name": "Address", "width": 2, "required": false },
        { "type": "deleteButton", "name": "Delete" },
        { "type": "cancelButton", "name": "Cancel" },
        { "type": "okButton", "name": "Ok" }
      ]
    },
    {
      "id": "ActivityForm",
      "title": "Activity",
      "url": "/activity",
      "formFieldList": [
        { "id": "name", "type": "text", "name": "Activity Name", "width": 2, "required": true },
        { "id": "date", "type": "date", "name": "Date", "width": 2, "required": true },
        { "id": "location", "type": "autocomplete", "name": "Location", "url": "/location", "form": "LocationForm", "width": 2 },
        { "type": "deleteButton", "name": "Delete" },
        { "type": "cancelButton", "name": "Cancel" },
        { "type": "okButton", "name": "Ok" }
      ]
    }
  ],
  "pageList": [
    {
      "id": "mainmenu",
      "elementList": [
        { "type": "button", "name": "Friends", "icon": "fa-user", "color": "emerald", "page": "friendsPage" },
        { "type": "button", "name": "Groups", "icon": "fa-weixin", "color": "wisteria", "page": "groupsPage" },
        { "type": "button", "name": "Locations", "icon": "fa-map-marker-alt", "color": "amber", "page": "locationsPage" },
        { "type": "button", "name": "Activities", "icon": "fa-running", "color": "carrot", "page": "activitiesPage" }
      ]
    },
    {
      "id": "friendsPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "newButton", "name": "New Friend", "icon": "fa-user-plus", "color": "emerald", "form": "FriendForm" },
        { "type": "list", "icon": "fa-user", "color": "emerald", "search": true, "url": "/friend", "form": "FriendForm", "page": "friendDetailPage" }
      ]
    },
    {
      "id": "friendDetailPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "button", "name": "Edit Friend", "icon": "fa-edit", "form": "FriendForm" },
        { "type": "newButton", "name": "Add Activity", "icon": "fa-plus", "color": "carrot", "form": "AddActivityForm" },
        { "type": "list", "icon": "fa-running", "color": "carrot", "search": true, "url": "/friend/:friendKey/activity" }
      ]
    },
    {
      "id": "groupsPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "newButton", "name": "New Group", "icon": "fa-weixin", "color": "wisteria", "form": "GroupForm" },
        { "type": "list", "icon": "fa-weixin", "color": "wisteria", "search": true, "url": "/group", "form": "GroupForm" }
      ]
    },
    {
      "id": "locationsPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "newButton", "name": "New Location", "icon": "fa-map-marker-alt", "color": "amber", "form": "LocationForm" },
        { "type": "list", "icon": "fa-map-marker-alt", "color": "amber", "search": true, "url": "/location", "form": "LocationForm" }
      ]
    },
    {
      "id": "activitiesPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "newButton", "name": "New Activity", "icon": "fa-plus", "color": "carrot", "form": "ActivityForm" },
        { "type": "list", "icon": "fa-running", "color": "carrot", "search": true, "url": "/activity", "form": "ActivityForm", "page": "activityDetailPage" }
      ]
    },
    {
      "id": "activityDetailPage",
      "elementList": [
        { "type": "backbutton" },
        { "type": "button", "name": "Edit Activity", "icon": "fa-edit", "form": "ActivityForm" },
        { "type": "newButton", "name": "Add Friend", "icon": "fa-user-plus", "color": "emerald", "form": "AddFriendForm" },
        { "type": "list", "icon": "fa-user", "color": "emerald", "search": true, "url": "/activity/:activityKey/friend" }
      ]
    }
  ]
}
